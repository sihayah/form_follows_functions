    <article class="post">
      <div class="title">
    <a href="/post/{{id}}" class="post-title"> {{title}} </a>
      </div>
      <div>
          <p class="limited-content">
              {{display_limited_text content}}
          </p>
      </div>
      <div class="meta">
        by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}} </a>
      </div>
    </article>